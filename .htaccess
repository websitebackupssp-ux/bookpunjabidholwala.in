# Enable rewrite engine
RewriteEngine On

# Redirect requests that include .php to the clean URL
# e.g. /about.php  ->  /about  (301 for SEO)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[?\s] [NC]
RewriteRule ^ %1 [R=301,L]

# Internally map clean URLs to existing .php files
# e.g. /about  ->  /about.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]
